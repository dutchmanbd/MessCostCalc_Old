<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00796B">

    <LinearLayout
        android:id="@+id/linearLayout118"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvCusMemberInDate"
            android:background="@drawable/border_panel"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Date"
            android:layout_margin="1dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvCusMemberInName"
            android:gravity="center"
            android:background="@drawable/border_panel"
            android:layout_weight="1"
            android:text="Name"
            android:layout_margin="1dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvCusMemberInAdTk"
            android:background="@drawable/border_panel"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Advance"
            android:layout_margin="1dp"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvCusMemberDatail"
        android:layout_margin="5dp"
        android:layout_below="@+id/linearLayout118"
         />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCusMDetailOk"
            android:layout_below="@+id/lvCusMemberDatail"
            android:text="OK"
            android:background="@drawable/border_round"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5dp" />

</RelativeLayout>
