<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dutchman.messcostcalc.DebitFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout18"
        android:layout_margin="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:background="@drawable/border_panel"
            android:layout_weight="1"
            android:id="@+id/tvDebitName"
            android:gravity="left"
            android:layout_margin="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Credit"
            android:background="@drawable/border_panel"
            android:layout_weight="1"
            android:id="@+id/tvDebitCreditTk"
            android:gravity="right"
            android:layout_margin="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Debit"
            android:background="@drawable/border_panel"
            android:layout_weight="1"
            android:id="@+id/tvDebitDebitTk"
            android:gravity="right"
            android:layout_margin="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Balance"
            android:background="@drawable/border_panel"
            android:layout_weight="1"
            android:id="@+id/tvDebitBalance"
            android:gravity="right"
            android:layout_margin="1dp"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvDebitResult"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/linearLayout18"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

</RelativeLayout>
